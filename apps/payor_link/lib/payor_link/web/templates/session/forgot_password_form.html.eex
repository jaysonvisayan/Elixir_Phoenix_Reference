      <%= if @error == false do %>
        <div class="field required" id="password">
          <label class="text-left">NEW PASSWORD</label>
          <div class="ui icon input">
            <i class="eye link icon" id="reset_eye"></i>
            <%= password_input f, :password, placeholder: "password", autocomplete: "off", id: "password_validate", autofocus: "true" %>
          </div>
        </div>

        <% else %>
          <div class="field error" id="password">
            <label class="text-left">NEW PASSWORD</label>
            <div class="ui icon input">
              <i class="eye link icon" id="reset_eye"></i>
              <%= password_input f, :password, placeholder: "password", autocomplete: "off", id: "password_validate", autofocus: "true" %>
            </div>
          </div>
              <p style="color: red;" id="append_error_new_password">
                <%= for error <- String.split(@error, "|||") do %>
                  <%= error %>
                  <br>
                <% end %>
              </p>
          <% end %>
          <div class="ui clearing" id="strengthMeterLabel">
            <p class="ui left floated sublabel">
              Password strength
            </p>
            <p class="ui right floated sublabel" id="passwordStrength"></p>
          </div>
          <div class="ui tiny progress mrg1halfT mrg0B" id="strengthMeter">
            <div class="bar"></div>
          </div>
        </div>
        <div class="ui divider hidden"></div>
      <div class="field required" id="password">
            <label class="text-left">RE-ENTER PASSWORD</label>
            <div class="ui icon input">
              <i class="eye link icon" id="reset_eye_1"></i>
              <%= password_input f, :password_confirmation, placeholder: "password", autocomplete: "off", id: "password_confirm", autofocus: "true" %>
