<%# Service Fee start %>
<h4 class="ui dividing header">Service Fee</h4>
<div class="ui grid centered container">
  <div class="four wide computer six wide tablet column">
    <b>Coverage</b>
  </div>
  <div class="four wide computer six wide tablet column">
    <b>Mode of Payment</b>
  </div>
  <div class="four wide computer six wide tablet column">
    <b>Service Fee</b>
  </div>
  <div class="four wide computer six wide tablet column">
    <b>Rate</b>
  </div>
  <%= for service_fee <- @facility.facility_service_fees do %>
    <div class="four wide computer six wide tablet column">
      <b><%= service_fee.coverage.name %></b>
    </div>
    <div class="four wide computer six wide tablet column">
      <b><%= service_fee.payment_mode %></b>
    </div>
    <div class="four wide computer six wide tablet column">
      <b><%= service_fee.service_type.text %></b>
    </div>
    <div class="four wide computer six wide tablet column">
      <b><%= display_service_fee_rate(service_fee) %></b>
    </div>
  <% end %>
</div>
<%# Service Fee end %>
<%# Navigation buttons start %>
<div class = "ui one column right aligned grid">
  <div class="column eight wide left aligned">
    <div class="ui red button" role="delete-facility" facilityId="<%= @facility.id %>">
      <i class="trash icon"></i>
      Delete Draft
    </div>
  </div>
  <div class="column eight wide">
    <a href="/facilities/<%= @facility.id %>/setup?step=5" class="ui button">
      <i class="chevron left icon"></i>
      Back
    </a>
    <a href="/facilities/<%= @facility.id %>/summary" class="ui blue right floated button">
      <i class="send icon"></i>
      Submit
    </a>
    <div class="ui blue right floated button" role="facility-print" facilityID="<%= @facility.id %>">
      <i class="print icon"></i>
      Print
    </div>
  </div>
</div>
<%# Navigation buttons end %>
