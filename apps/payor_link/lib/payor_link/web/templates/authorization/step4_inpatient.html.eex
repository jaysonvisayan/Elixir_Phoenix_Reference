<%= render "breadcrumbs_new.html" %>
<div class="ui equal width left aligned padded grid stackable">
  <div class="row">
    <div class="column">
      <div class="ui segments" name="formValidateStep4Inpatient">
        <div class="ui form segment">
          <div class="ui ordered five steps">
            <div class="disabled step">
              <div class="content">
                <div class="title">Validate Member</div>
              </div>
            </div>
            <div class="disabled step">
              <div class="content">
                <div class="title">Select Facility</div>
              </div>
            </div>
            <div class="disabled step">
              <div class="content">
                <div class="title">Select Coverage</div>
              </div>
            </div>
            <div class="active step">
              <div class="content">
                <div class="title">Details</div>
              </div>
            </div>
          </div>
          <%= if @changeset.action do %>
            <div class="ui negative message">
              <i class="close icon"></i>
              <%= get_flash(@conn, :error) %>
            </div>
          <% end %>
          <%= render "step4_inpatient_form.html",
          conn: @conn,
          changeset: @changeset,
          special_approval: @special_approval,
          authorization_procedures: @authorization_procedures,
          procedures: @procedures,
          diagnoses: @diagnoses,
          authorization: @authorization,
          practitioners: @practitioners,
          member: @member,
          ruvs: @ruvs,
          facility_contacts: @facility_contacts,
          authorization_rooms: @authorization_rooms,
          action: authorization_path(@conn, :update_setup, @authorization, step: "4") %>

          <%= render "step4_inpatient_modal.html",
          conn: @conn,
          changeset: @changeset,
          special_approval: @special_approval,
          authorization_procedures: @authorization_procedures,
          authorization_diagnosis: @authorization_diagnosis,
          procedures: @procedures,
          diagnoses: @diagnoses,
          authorization: @authorization,
          practitioners: @practitioners,
          member: @member,
          ruvs: @ruvs,
          action: authorization_path(@conn, :create_disease_procedure, @authorization) %>

          <%= render "step4_inpatient_modal_room_and_board.html",
          conn: @conn,
          changeset: @changeset,
          special_approval: @special_approval,
          authorization_procedures: @authorization_procedures,
          authorization_diagnosis: @authorization_diagnosis,
          procedures: @procedures,
          diagnoses: @diagnoses,
          authorization: @authorization,
          practitioners: @practitioners,
          member: @member,
          ruvs: @ruvs,
          facility_room_rates: @facility_room_rates,
          action: authorization_path(@conn, :create_inpatient_room_and_board, @authorization) %>

          <%= render "step4_inpatient_modal_practitioner.html",
          conn: @conn,
          changeset: @changeset,
          special_approval: @special_approval,
          authorization_procedures: @authorization_procedures,
          authorization_diagnosis: @authorization_diagnosis,
          procedures: @procedures,
          diagnoses: @diagnoses,
          authorization: @authorization,
          practitioners: @practitioners,
          member: @member,
          ruvs: @ruvs,
          action: authorization_path(@conn, :create_disease_procedure, @authorization) %>

        </div>
      </div>
    </div>
  </div>
</div>

<%= if assigns[:modal_open] do %>
  <input type="hidden" id="open_modal">
<% end %>
