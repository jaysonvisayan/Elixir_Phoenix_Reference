<div id="edit_card">
<%= form_for @changeset, @action, [as: :fulfillment_card, class: "ui form",id: "new_card", multipart: :true], fn f -> %>
  <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token() %>">
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p style="color:red">Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="ui grid">

    <%# 1st column %>
    <div class="sixteen wide tablet eight wide computer column">
      <input type="hidden" id="card_value" value= <%= @fulfillment.card %>>
      <div class="field">
        <label>Card</label>
      </div>
      <div class="inline fields">
        <div class="field">
          <div class="ui radio checkbox" id="EMV_radio">
            <%= radio_button(f, :card, "EMV") %>
            <label>EMV</label>
          </div>
        </div>
        <div class="field">
          <div class="ui radio checkbox" id="Digital_radio">
            <%= radio_button(f, :card, "Digital") %>
            <label>Digital</label>
          </div>
        </div>
        <div class="field">
          <div class="ui radio checkbox" id="Regular_radio">
            <%= radio_button(f, :card, "Regular") %>
            <label>Regular</label>
          </div>
        </div>
      </div>

      <input type="hidden" id="card_type_value" value= "<%= @fulfillment.card_type %>">
      <div class="field" id="card_type_label">
        <label>Card Type</label>
      </div>
      <div class="inline fields" id="card_type">
        <div class="field">
          <div class="ui radio checkbox" id="Premium_radio">
            <%= radio_button(f, :card_type, "Premium", checked: "") %>
            <label>Premium</label>
          </div>
        </div>
        <div class="field">
          <div class="ui radio checkbox" id="Platinum_radio">
            <%= radio_button(f, :card_type, "Platinum") %>
            <label>Platinum</label>
          </div>
        </div>
        <div class="field">
          <div class="ui radio checkbox" id="Platinum_Plus_radio">
            <%= radio_button(f, :card_type, "Platinum Plus") %>
            <label>Platinum Plus</label>
          </div>
        </div>
      </div>
      <div class="field">
      <%= label f, "Plan(Code/Name)", class: "control-label" %>
      <%= text_input f, :product_code_name, class: "form-control"%>
      <p style="color:red"><%= error_tag f, :product_code_name %></p>
      </div>
      <div class="field">
        <%= label f, :transmittal_listing, "Transmittal Listing" %>
        <%= select f, :transmittal_listing, ["TRANSMITTAL LIST 1 - Alphabetically arranged per branch","TRANSMITTAL LIST 2 - Alphabetically arranged per principal / family","TRANSMITTAL LIST 3 - Alphabetically arranged / per family / per branch","TRANSMITTAL LIST 4 - Alphabetically arranged / per family / per affiliate"], prompt: "Select Display", id: "line1", class: "ui dropdown" %>
        <%= error_tag f, :transmittal_listing %>
      </div>
      <div class="field">
        <%= label f, :packaging_style, "Packaging Style" %>
        <%= select f, :packaging_style, ["Sealed","Tape Sealed"], prompt: "Select Display", id: "line1", class: "ui dropdown" %>
        <%= error_tag f, :packaging_style %>
      </div>
      <b><label id="card_display_label">Card Display:</label></b>
      <br>
      <br>
      <div id="card_display">

      <div class="inline field">
        <%= label f, :card_display_line1, "1st Line " %>
        <%= select f, :card_display_line1, ["MediLink Number","Name of Member","Account Name","Branch Name","Exclusive Hotline"], prompt: "Select Display", id: "display_line1", class: "ui dropdown" %>
        <%= error_tag f, :card_display_line1 %>
      </div>

      <div class="inline field">
        <%= label f, :card_display_line2, "2nd Line" %>
        <%= select f, :card_display_line2, ["MediLink Number","Name of Member","Account Name","Branch Name","Exclusive Hotline"], prompt: "Select Display", id: "line2", class: "ui dropdown" %>
        <%= error_tag f, :card_display_line2 %>
      </div>

      <div class="inline field">
        <%= label f, :card_display_line3, "3rd Line" %>
        <%= select f, :card_display_line3, ["MediLink Number","Name of Member","Account Name","Branch Name","Exclusive Hotline"], prompt: "Select Display", id: "line3", class: "ui dropdown" %>
        <%= error_tag f, :card_display_line3 %>
      </div>

      <div class="inline field">
        <%= label f, :card_display_line4, "4th Line" %>
        <%= select f, :card_display_line4, ["MediLink Number","Name of Member","Account Name","Branch Name","Exclusive Hotline"], prompt: "Select Display", id: "line4", class: "ui dropdown" %>
        <%= error_tag f, :card_display_line4 %>
      </div>
      </div>

    </div>

