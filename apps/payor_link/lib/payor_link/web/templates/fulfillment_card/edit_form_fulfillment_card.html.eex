  <div class="ui grid">
    <div class="column sixteen wide">
      <button class="ui red button mrg1T" id="remove_fulfillment" accountID="<%= @account_id %>" fulfillmentID="<%= @fulfillment.id%>" type="button">
      <i class="trash left icon"></i>Delete Draft
    </button>
        <%= submit "Next", class: "ui right floated primary button", id: "submit_edit_fulfillment" %>
        <span><a href="#" link_cancel="/accounts/<%= @account_id %>?active=fulfillment" class="ui right floated button" id= "cancel_fulfillment">Cancel</a></span>
